<% provide(:title, "Modify Campaign") %>

<h1>Modify Campaign</h1>

<div class="row">
	<div class="col-xs-12 col-md-6 col-md-offset-3">
		<%= bootstrap_form_for(@campaign) do |f| %>

			<%= f.text_field :name %>
			<%= f.text_area :description, rows: 5 %>
			<%= f.check_box :is_public, label: "Public Campaign" %>

			<%= f.submit "Save Changes", class: "btn btn-large btn-primary" %>

		<% end %>
	</div>
</div>
