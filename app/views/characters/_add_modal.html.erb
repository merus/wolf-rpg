<div id="addModal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<%= form_for(@character, html: {class: "form-inline" }, url: { action: :skills }) do |f| %>
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">Ã—</button>
					<h3>Add Skills</h3>
					Show:&nbsp;
					<%= select_tag(:skill_filter, options_for_select(Skill.synergy_names.unshift('All')), class: "span2") %>
				</div>
				<div class="modal-body">
					<% skills = @character.can_add_skills %>
					<div class="row">
						<div class="col-xs-12">
							<% skills.each_with_index do |skill, index| %>
								<%= content_tag :div, class: "checkbox-inline " + skill.synergy_css('add-'), style: "margin-left: 0px; width: 31%" do %>
									<%= check_box_tag skill.name_tag('add'), 'skill to add', false, onChange: "add_selected('#{skill.name}')" %> 
									<%= skill.name %>
								<% end %>
							<% end %>
						</div>
					</div>

				</div>
				<div class="modal-footer">
					<a href='#' class="btn" data-dismiss="modal">Cancel</a>
					<%= f.submit "Add Skills", class: "btn btn-small btn-primary" %>
				</div>
			<% end %>
		</div>
	</div>
</div>
