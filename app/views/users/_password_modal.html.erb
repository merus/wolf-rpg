<div id="passwordModal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<%= bootstrap_form_for(@user, url: {action: :password}) do |f| %>
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">Ã—</button>
				<h3>Change Password</h3>
			</div>
			<div class="modal-body">

				<%= f.password_field :new_password, label: "New Password" %>
				<%= f.password_field :new_password_confirmation, label: "Confirm New Password" %>
				<%= f.password_field :old_password, label: "Old Password" %>

			</div>
			<div class="modal-footer">
				<a href='#' class="btn" data-dismiss="modal">Cancel</a>
				<%= f.submit "Update", class: "btn btn-small btn-primary" %>
			</div>
			<% end %>
		</div>
	</div>
</div>
