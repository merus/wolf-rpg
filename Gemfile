source 'https://rubygems.org'
ruby '2.4.1'

gem 'rails', '5.1.3'
gem 'pg', '0.21.0'

gem 'bootstrap-sass', '~>3.4'
gem 'bcrypt'
gem 'jquery-rails'
gem 'libxml-ruby'
gem 'will_paginate'
gem 'bootstrap-will_paginate'
gem 'bootstrap_form'

group :development, :test do
	gem 'rspec-rails'
	gem 'annotate'
	gem 'better_errors'
	gem 'binding_of_caller' #used by better_errors to open a console at the point an exception's thrown
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

group :test do
	gem 'capybara'
	gem 'factory_girl_rails'
end
